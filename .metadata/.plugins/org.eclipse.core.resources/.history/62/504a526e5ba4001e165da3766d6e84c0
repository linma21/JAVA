package sub3;
/*
 * 날짜 : 23/12/27
 * 이름 : 최이진
 * 내용 : 반복문 for 실행
 */
public class Fortest {

	public static void main(String[] args) {
		
		//for(초기식 : 조건식 : 증감식) 값이 조건식에 맞지 않을때까지 반복
		for(int i=1 ; i<=5 ; i++) {
 		 System.out.println("i : " + i);
		
		}
		//1부터 10까지 합
		int sum = 0;
		
 		for(int k=1 ; k<=10 ; k++ ) {
		   sum = sum + k;
		   //sum += k; 
		}
		System.out.println("1부터 10까지 합 : " + sum);
		
		//1부터 10까지 짝수합
		int tot = 0;
		
		for(int k =2 ; k <= 10 ; k++ ) {
			tot = tot + k;
			
		}
		System.out.println("1부터 10까지 짝수합 :" + tot);
		
		
		
		//for 중첩
		//구구단
		//별삼각형
		
		
		
		
		
	}
	
	
}
